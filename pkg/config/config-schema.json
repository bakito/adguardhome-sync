{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "adguardhome-sync Configuration",
  "description": "validates only for valid schema. No required fields, as the can be defined via env ars afterwards.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "cron": {
      "type": "string"
    },
    "runOnStart": {
      "type": "boolean"
    },
    "continueOnError": {
      "type": "boolean"
    },
    "printConfigOnly": {
      "type": "boolean"
    },
    "origin": {
      "$ref": "#/definitions/Instance"
    },
    "replicas": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Instance"
      }
    },
    "replica": {
      "$ref": "#/definitions/Instance"
    },
    "api": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "port": {
          "type": "number"
        },
        "darkMode": {
          "type": "boolean"
        },
        "metrics": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "scrapeInterval": {
              "type": "string"
            }
          }
        }
      }
    },
    "features": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "generalSettings": {
          "type": "boolean"
        },
        "queryLogConfig": {
          "type": "boolean"
        },
        "statsConfig": {
          "type": "boolean"
        },
        "clientSettings": {
          "type": "boolean"
        },
        "services": {
          "type": "boolean"
        },
        "filters": {
          "type": "boolean"
        },
        "theme": {
          "type": "boolean"
        },
        "dhcp": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "serverConfig": {
              "type": "boolean"
            },
            "staticLeases": {
              "type": "boolean"
            }
          }
        },
        "dns": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "serverConfig": {
              "type": "boolean"
            },
            "accessLists": {
              "type": "boolean"
            },
            "rewrites": {
              "type": "boolean"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Instance": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "webURL": {
          "type": "string",
          "format": "uri"
        },
        "autoSetup": {
          "type": "boolean"
        },
        "insecureSkipVerify": {
          "type": "boolean"
        },
        "username": {
          "type": "string"
        },
        "apiPath": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "dhcpServerEnabled": {
          "type": "boolean"
        },
        "interfaceName": {
          "type": "string"
        }
      }
    }
  }
}
